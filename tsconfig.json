{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports":true,
      "esModuleInterop": true,
      "noImplicitAny":false,
      "stripInternal": true,
      "lib": [
        "dom",
        "esnext"
      ],
      "jsx": "react",
      "importHelpers": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "composite": true,
      "baseUrl": "./packages",
      "paths": {
        "@onoffcanvas/*": ["./*/src"]
      },
      "typeRoots": [
        "node_modules/@types"
      ]
    }
  }